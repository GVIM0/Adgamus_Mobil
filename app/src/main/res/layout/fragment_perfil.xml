<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AjustesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconoIzquierda"
                android:layout_width="51dp"
                android:layout_height="54dp"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/engranaje" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Perfil"
                android:textColor="#FF000000"
                android:textSize="20sp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:src="@drawable/baseline_person_pin_24"></ImageView>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/btns_ajustes"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:text="Editar"
                android:textAllCaps="false"
                android:textColor="#F1EBDF" />

            <EditText
                android:id="@+id/Nombre_Usus"
                style="@style/Estilo_Primario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:inputType="none"
                android:text="Nombre_Usuario" />

            <EditText
                android:id="@+id/Correo_Usu"
                style="@style/Estilo_Correo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="Correo Usuario" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/layout_style_2"
                android:orientation="vertical"
                android:padding="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="342dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biografia del usuario:"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/BiografÃ­a_Usu"
                        android:layout_width="336dp"
                        android:layout_height="92dp"
                        android:inputType="none"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="30dp"

                        />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/layout_style_2"
                android:orientation="vertical"
                android:padding="15dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="342dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preferencias del usuario:"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/Preferencias_Usu"
                        android:layout_width="336dp"
                        android:layout_height="92dp"
                        android:inputType="none"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="30dp" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Aceptar_Cambios"

                android:layout_width="142dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"

                android:background="@drawable/btns_ajustes"
                android:text="Aceptar cambios"
                android:textAllCaps="false"

                android:textColor="#F1EBDF"
                android:textStyle="bold"
                android:visibility="invisible" />


        </LinearLayout>

    </ScrollView>

</FrameLayout>